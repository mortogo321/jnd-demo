APP_NAME="URL Shortener"
APP_ENV=testing
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8001

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# PHP Configuration
PHP_CLI_SERVER_WORKERS=4

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database - MySQL for testing
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=url_shortener_test
DB_USERNAME=urlshortener
DB_PASSWORD=test_password

# MySQL Configuration (used by docker-compose)
MYSQL_ROOT_PASSWORD=test_root_password
MYSQL_DATABASE=url_shortener_test
MYSQL_USER=urlshortener
MYSQL_PASSWORD=test_password

# Broadcasting
BROADCAST_CONNECTION=log

# Cache
CACHE_STORE=redis
CACHE_PREFIX=

# Filesystem
FILESYSTEM_DISK=local

# Queue
QUEUE_CONNECTION=redis

# Session
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Redis
REDIS_CLIENT=predis
REDIS_HOST=redis
REDIS_PASSWORD=test_redis_password
REDIS_PORT=6379

# Mail
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# URL Shortener Configuration
SHORT_URL_LENGTH=6
SHORT_URL_DOMAIN="${APP_URL}"
RATE_LIMIT_PER_MINUTE=60

# CORS
SANCTUM_STATEFUL_DOMAINS=localhost:8080
FRONTEND_URL=http://localhost:8080
